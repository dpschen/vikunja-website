{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "groupName": "astro",
      "matchPackagePrefixes": [
        "@astrojs/",
        "astro"
      ]
    },
    {
      "groupName": "tailwindcss",
      "matchPackagePrefixes": [
        "@tailwindcss/",
        "tailwindcss"
      ]
    }
  ]
}
