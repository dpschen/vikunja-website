---
interface Props {
	type: 'warning' | 'info'
}

const {type} = Astro.props

function getClasses(): string {
	let suffix = ''
	switch (type) {
		case 'info':
			suffix = 'bg-primary-lighter'
			break
		case 'warning':
			suffix = 'bg-yellow-200 dark:bg-yellow-300'
			break
	}

	return 'callout rounded px-4 py-3 dark:text-gray-800 ' + suffix
}
---

<div class={getClasses()}>
	<slot/>
</div>

<style>
	.callout :global(> p) {
		@apply m-0;
	}
</style>